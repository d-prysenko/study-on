                                    <li><h6 class="dropdown-header">{{ app.user.email }}</h6></li>
                                    <li><a class="dropdown-item" href="{{ path('profile') }}">Профиль</a></li>


                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Выйти</a></li>
                                </ul>
                            </li>
                        </ul>
